{
  "name": "fieldcss",
  "version": "1.0.0",
  "description": "Simple CSS framework for high quolity designs.",
  "scripts": {
    "start": "npm-run-all -p server watch",
    "server": "webpack-dev-server",

    "compile-sass": "node-sass --include-path scss ./src/scss/bundle.scss ./dist/css/bundle.min.css",
    "autoprefixer": "postcss ./dist/css/bundle.min.css --use autoprefixer -d ./dist/css",

    "dev:sass": "npm-run-all -s styles:*",
    "dev:scripts": "webpack",

    "watch:sass": "node-sass --include-path scss ./src/scss/bundle.scss ./dist/css/bundle.min.css -w",
    "watch:scripts": "webpack --watch",
    "watch": "npm-run-all -p watch:*",

    "release:clean": "trash ./dist",
    "release:mkdir": "mkdirp ./dist",
    "release:css": "node-sass --include-path scss ./src/scss/bundle.scss ./dist/css/bundle.min.css --output-style compressed",
    "release:scripts": "webpack --prod",
    "release": "npm-run-all -s release:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suginoki45/fieldcss.git"
  },
  "author": "Glatch",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "autoprefixer": "^9.5.1",
    "babel-loader": "^8.0.5",
    "browser-sync": "^2.26.3",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "stylelint-config-recommended-scss": "^3.2.0",
    "trash-cli": "^1.4.0",
    "watch": "^1.0.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1",
    "yargs": "^13.2.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.8.1",
    "aos": "^3.0.0-beta.6",
    "minireset.css": "0.0.4"
  }
}
